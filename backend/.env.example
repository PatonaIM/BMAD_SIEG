# ============================================================================
# REQUIRED VARIABLES - Must be set for the application to work
# ============================================================================

# Database Components (REQUIRED)
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=teamified

# Test Database Components (REQUIRED)
TEST_DB_USER=postgres
TEST_DB_PASSWORD=your_test_password_here
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=teamified_test

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=sk-proj-your-api-key-here

# Supabase Storage Configuration (REQUIRED)
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key_here

# Authentication (REQUIRED)
JWT_SECRET=your-secret-key-min-32-chars

# ============================================================================
# OPTIONAL VARIABLES - Have default values, override if needed
# ============================================================================

# OpenAI API Configuration (Optional - defaults provided)
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# OpenAI Text-to-Speech (TTS) Settings (Optional - defaults provided)
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy
OPENAI_TTS_SPEED=1.0

# OpenAI Speech-to-Text (STT) Settings (Optional - defaults provided)
OPENAI_STT_MODEL=whisper-1
OPENAI_STT_LANGUAGE=en

# Audio Quality Constraints (Optional - defaults provided)
AUDIO_MAX_FILE_SIZE_MB=25
AUDIO_MIN_SAMPLE_RATE_HZ=16000
AUDIO_MIN_DURATION_SECONDS=0.1

# Speech API Timeouts in seconds (Optional - defaults provided)
SPEECH_STT_TIMEOUT_SECONDS=30
SPEECH_TTS_TIMEOUT_SECONDS=15

# OpenAI Realtime API Configuration (Optional - defaults provided)
ENABLE_REALTIME_API=true
REALTIME_API_MODEL=gpt-4o-realtime-preview-2024-10-01
REALTIME_VOICE=alloy
REALTIME_TEMPERATURE=0.7
REALTIME_MAX_RESPONSE_TOKENS=1000

# Development Settings (Optional - defaults provided)
USE_MOCK_AI=false

# Supabase Storage Configuration (Optional - defaults provided)
SUPABASE_ANON_KEY=your_anon_key_here
VIDEO_RETENTION_DAYS=30
HARD_DELETE_AFTER_DAYS=90
VIDEO_STORAGE_THRESHOLD_GB=100

# Authentication (Optional - defaults provided)
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# Application (Optional - defaults provided)
ENVIRONMENT=development
LOG_LEVEL=INFO
API_V1_PREFIX=/api/v1

# CORS - Add your frontend URLs here (Optional - defaults provided)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Progressive Assessment Thresholds (Optional - defaults provided)
WARMUP_MIN_QUESTIONS=2
WARMUP_CONFIDENCE_THRESHOLD=0.7
STANDARD_MIN_QUESTIONS=4
STANDARD_ACCURACY_THRESHOLD=0.8
BOUNDARY_CONFIDENCE_THRESHOLD=0.5

# Progressive Assessment AI Timeouts in seconds (Optional - defaults provided)
PROGRESSIVE_ASSESSMENT_TIMEOUT=30
